<!DOCTYPE html>
<html lang="en">



    <%- include('./partials/head') %>
<body>
    <% if (locals.user == undefined) { %>
        <%- include('./partials/headerLogueado') %> 
    <% } else { %>
     <%- include('./partials/header')  %>
    <% } %>
    
    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= usuario[0].fotoPerfil %>" alt="">
                <div class="info-usuario">
                    <p> <%= usuario[0].nombreUsuario %> </p> 
                    <a class="follow" href="">seguir</a>
                    <ul class="meta">
                        <li>2 post</li>
                        <li>1856 seguidores</li>
                        <li>357 seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <article class="post">
                    <% for( let i = 0; i < usuario.length; i++ ) { %>
                        <a href="/posts/detalle/id<%= usuario[i].id %>" >
                            <img src="<%= usuario[i].imagen %>" alt="">
                        </a>
                        <% } %>
                </article>
       
            </section>
        </div>
    </main>

    <footer class="main-footer">
        <%- include('./partials/footer') %>
    </footer>
</body>

</html>