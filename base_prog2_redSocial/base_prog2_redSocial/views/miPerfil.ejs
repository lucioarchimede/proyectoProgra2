<!DOCTYPE html>
<html lang="en">


    <%- include('./partials/head') %>
    <body>
    <%- include('./partials/headerLogueado') %>
    
    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= datos.fotoPerfil %>" alt="">
                <div class="info-usuario">
                    <p><%= datos.nombreUsuario %></p> 
                    <a class="follow" href="editarPerfil"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li> <%=datos.posteo.length %> posts </li>
                        <li>1856 seguidores</li>
                        <li>357 seguidos</li>
                    </ul>
                </div>
               
                <% for( let i = 0; i < datos.posteo.length; i++ ) { %>
                </section>
                <section class="bottom">
    
                    <article class="post">
                        <a href="<%'posts/detallePost/'+ datos.posteo[i].id%>">
                            <img src="<%= datos.posteo[i].nombreImagen%>" alt="">
                        </a>
                    </article>
        </div>
        <% } %>
    </main>

    <footer class="main-footer">
        <%- include('./partials/footer') %>
    </footer>
</body>

</html>

